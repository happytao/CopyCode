<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_card_radius"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="12dp"
    android:paddingRight="20dp"
    android:paddingLeft="20dp"
    android:paddingBottom="16dp"
    android:paddingTop="12dp"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="订单编号：46737237647167146"
        android:textColor="@color/color_CC000000"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/tv_order_id"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="待接单"
        android:textColor="@color/color_CC000000"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/tv_type"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintTop_toBottomOf="@id/tv_order_id"
        android:layout_marginTop="13dp"
        android:background="@color/color_1A000000"
        android:id="@+id/line"
        />
    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:id="@+id/iv_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line"
        android:src="@drawable/icon_work_postion"
        android:layout_marginTop="17dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_site"
        app:layout_constraintTop_toBottomOf="@id/line"
        app:layout_constraintLeft_toRightOf="@id/iv_icon"
        android:layout_marginLeft="7dp"
        android:text="新城花园新城花园新城花园新城花园新城花园新城花园新城花园"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:layout_marginTop="14dp"
        android:maxLines="2"
        android:maxEms="16"
        android:textColor="@color/color_CC000000"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_site"
        app:layout_constraintLeft_toRightOf="@id/iv_icon"
        android:id="@+id/tv_name"
        android:text="李先生"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="7dp"
        android:textColor="@color/color_66000000"
        android:textSize="14sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        app:layout_constraintLeft_toRightOf="@id/iv_icon"
        android:id="@+id/tv_time"
        android:text="预约时间：2020-12-08 14:21"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="7dp"
        android:textColor="@color/color_66000000"
        android:textSize="14sp"/>







</androidx.constraintlayout.widget.ConstraintLayout>