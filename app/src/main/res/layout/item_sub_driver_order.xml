<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="14dp"
    android:paddingTop="14dp"
    android:background="@drawable/bg_card_radius"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/color_CC000000"
            android:id="@+id/number"
            android:text="111111"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/color_CC000000"
            android:id="@+id/type"
            android:text="已完成"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_1A000000"
        android:layout_marginTop="13dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:id="@+id/head"
            android:src="@mipmap/ic_launcher"
            android:layout_marginTop="18dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:layout_toRightOf="@id/head"
            android:layout_marginLeft="3dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/color_CC000000"
                android:text="赵师傅"
                android:id="@+id/name"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp"
                >

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="15dp"
                    android:id="@+id/icon"
                    android:src="@drawable/icon_driver_phone"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/phone"
                    android:layout_marginLeft="2dp"
                    android:text="13211111111"
                    android:textColor="@color/color_66000000"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/time"
                android:textSize="12sp"
                android:textColor="@color/color_66000000"
                android:layout_marginTop="6dp"
                android:text="2021-4-3"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/clean_tonnage"
            android:layout_alignParentRight="true"
            android:text="10t"
            android:textColor="@color/color_CC000000"
            android:textSize="16sp"
            android:layout_marginTop="17dp"/>
    </RelativeLayout>

</LinearLayout>