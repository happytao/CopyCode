<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.login.ModifyPsdActivity"
    android:background="@color/color_F4F4F4"
    android:orientation="vertical">

    <com.xt.garbage.wigdt.Toolbar
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:leftBackground="@drawable/left_icon"
        app:titleTextColor="@color/color_CC000000"
        app:title="修改密码"
        android:background="@color/white"
        android:id="@+id/toolbar"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:text="test"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_marginTop="12dp"
        android:textSize="14sp"
        android:textColor="@color/color_CC000000"
        android:id="@+id/phoneNumber"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:hint="请输入验证码"
            android:layout_centerVertical="true"
            android:id="@+id/psd"
            android:textSize="14sp"
            android:textColorHint="@color/color_33000000"
            android:textColor="@color/color_000000"
            android:inputType="number"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_code"
            android:text="获取验证码"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/color_00BF60"
            android:textSize="14sp"/>

    </RelativeLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:id="@+id/new_psd"
        android:hint="请输入你的新密码"
        android:textColorHint="@color/color_33000000"
        android:textColor="@color/color_CC000000"
        android:textSize="14sp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:background="@color/white"
        android:inputType="textPassword" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:hint="请再次输入你的新密码"
        android:textColorHint="@color/color_33000000"
        android:textColor="@color/color_CC000000"
        android:textSize="14sp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@color/white"
        android:inputType="textPassword"
        android:id="@+id/confirm_psd"/>

    <Button
        style="@style/btn_confirm_style"
        android:text="提交"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/btn_send"/>

</LinearLayout>