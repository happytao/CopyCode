        <activity android:name=".ui.activity.work.clean.DriverListActivity" />
        <activity
            android:name=".ui.activity.SplashActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.activity.work.appointment.OrderCompleteActivity" />
        <activity android:name=".ui.activity.work.appointment.WaitOrderActivity" />
        <activity android:name=".ui.activity.work.appointment.OrderPackUpActivity" />
        <activity android:name=".ui.activity.work.shsm.ShsmOrderCancelDetailsActivity" />
        <activity android:name=".ui.activity.work.shsm.ShsmCompletedActivity" />
        <activity android:name=".ui.activity.work.shsm.ShsmOrderDetailsActivity" />
        <activity
            android:name=".WorkHomeActivity"
            android:launchMode="singleTask" />
        <activity android:name=".ui.activity.login.PsdLoginActivity" />
        <activity
            android:name=".ui.activity.login.LoginMainActivity"
            android:launchMode="singleTask" />
